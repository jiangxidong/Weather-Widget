{
  "manifest_version": 3,
  "name": "Weather Widget",
  "version": "1.0.0",
  "description": "A beautiful weather widget with real-time updates and dynamic UI",
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/weather-widget",
  "permissions": [
    "geolocation",
    "storage"
  ],
  "host_permissions": [
    "https://devapi.qweather.com/*",
    "https://geoapi.qweather.com/*",
    "https://a.hecdn.net/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "minimum_chrome_version": "88",
  "offline_enabled": false,
  "short_name": "Weather"
} 